 {% if tasks|length >= 1 %}
    <table>
            <tr>
                <th>Tarea</th>
                <th>Prioridad</th>
                <th>Horas estimadas</th>
                <th>Acciones</th>
            </tr>
            {% for task in tasks %}
                <tr>
                    <td>{{task.title}}</td>
                    <td>{{task.priority}}</td>
                    <td>{{task.hours}}</td>
                    <td class="buttons">
                        <a href="{{path('tasks_detail', {'id':task.id})}}" class="btn-show">Ver</a>
                        {% if app.user != null and task.user.id == app.user.id %}
                            <a href="{{path('tasks_edit', {'id':task.id})}}" class="btn-edit">Editar</a>
                            <a href="{{path('tasks_delete', {'id':task.id})}}" class="btn-delete">Borrar</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
{% else %}
    <strong> No se encontraron tareas </strong>
{% endif %}